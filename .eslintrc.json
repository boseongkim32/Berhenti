{
  "extends": "airbnb",
  "parser": "@babel/eslint-parser",
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "strict": 0,
    "quotes": 0,
    "no-else-return": 0,
    "new-cap": 0,
    "no-console": 0,
    "react/style-prop-object": 0,
    "object-curly-newline": 0,
    "import/no-unresolved": [
      2,
      {
        "caseSensitive": false
      }
    ],
    "global-require": 0,
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "no-underscore-dangle": 0,
    "arrow-body-style": 0,
    "one-var": [
      "error",
      {
        "uninitialized": "always",
        "initialized": "never"
      }
    ],
    "one-var-declaration-per-line": [
      "error",
      "initializations"
    ],
    "max-len": 0,
    "no-extra-parens": 0,
    "no-plusplus": 0,
    "no-restricted-syntax": [
      0,
      "DebuggerStatement"
    ],
    "no-debugger": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/prop-types": 0,
    "react/jsx-first-prop-new-line": 0,
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-props-no-spreading": 1,
    "react/function-component-definition": 0,
    "react/no-unstable-nested-components": [
      "warn",
      {
        "allowAsProps": true
      }
    ],
    "prefer-destructuring": 1,
    "react/destructuring-assignment": 1,
    "class-methods-use-this": 0,
    "no-use-before-define": [
      2,
      {
        "variables": false
      }
    ],
    "import/no-extraneous-dependencies": 0,
    // disable linebreak-style for crossplatform version control (git LF <-> CRLF)
    "linebreak-style": "off",
    // allow assigning to property of parameter
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "sourceType": "module"
    }
  }
}